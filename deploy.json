{
  "type": "delphi deploy config",
  "version": 1,
  "actions": [

    "// imports",
    {"type": "import", "dst": "../flu_contest/delphi_epidata.py"},
    {"type": "import", "dst": "../flu_contest/emailer.py"},
    {"type": "import", "dst": "../flu_contest/epidate.py"},
    {"type": "import", "dst": "../flu_contest/epiweek.py"},
    {"type": "import", "dst": "../flu_contest/neldermead.py"},
    {"type": "import", "dst": "../flu_contest/secrets.py"},

    "// epicast",
    {
      "type": "move",
      "src": "src/epicast/",
      "dst": "../flu_contest/",
      "match": "^.*\\.py$",
      "add-header-comment": true
    },

    "// archefilter",
    {
      "type": "move",
      "src": "src/archefilter/",
      "dst": "../flu_contest/",
      "match": "^.*\\.py$",
      "add-header-comment": true
    },

    "// automatic forecast submission",
    {
      "type": "move",
      "src": "src/main/",
      "dst": "../flu_contest/",
      "match": "^.*\\.py$",
      "add-header-comment": true
    },

    "// forecast generation",
    {
      "type": "move",
      "src": "src/forecasters/",
      "dst": "../flu_contest/",
      "match": "^.*\\.py$",
      "add-header-comment": true
    },

    "// utilities and input/output",
    {
      "type": "move",
      "src": "src/utils/",
      "dst": "../flu_contest/",
      "match": "^.*\\.py$",
      "add-header-comment": true
    },

    "// receiving uploaded forecasts",
    {
      "type": "move",
      "src": "src/uploads/upload_forecast.py",
      "dst": "../flu_contest/upload_forecast.py",
      "add-header-comment": true
    },
    {
      "type": "move",
      "src": "src/uploads/upload_forecast.php",
      "dst": "/home/automation/public_html/public/flu_contest/upload_forecast.php",
      "add-header-comment": true
    }

  ]
}
